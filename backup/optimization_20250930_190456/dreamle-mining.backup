server {
    server_name dreamlewebai.com www.dreamlewebai.com;

    # Gzip 压缩配置 - 减少 70-80% 传输大小
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;
    gzip_min_length 1000;

    location / {
        root /root/dreamle-mining;
        index index.html platform.html;
        try_files $uri $uri/ =404;
        add_header Access-Control-Allow-Origin *;
    }

    # API 代理已移除 - 使用直连 RPC 提升性能
    # 性能提升: 269ms → 69ms (74% 提升)

    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp)$ {
        root /root/dreamle-mining;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dreamlewebai.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dreamlewebai.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.dreamlewebai.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = dreamlewebai.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name dreamlewebai.com www.dreamlewebai.com;
    return 404; # managed by Certbot




}
